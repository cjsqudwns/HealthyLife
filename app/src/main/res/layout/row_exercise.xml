<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_span="2"
                android:padding="10dp"
                android:text="today time"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/exerciseArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="exercise_area"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/favorites"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_star" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시작 시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시작 시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="운동 시간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/exerciseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="exercise_time"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/memoExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="memo"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#212020"/>
</LinearLayout>